<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiskonBelanja">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="Diskoon Belanja"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/inputTotalBelanja"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:hint="Masukkan total belanja"
            android:inputType="text" />

        <Button
            android:id="@+id/btnHitungDiskon"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Total Diskon" />

        <TextView
            android:id="@+id/outputDiskon"
            android:layout_width="372dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:text="Diskon:"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/outputTotalBayar"
            android:layout_width="395dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:text="Total Belanja:"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />







    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>